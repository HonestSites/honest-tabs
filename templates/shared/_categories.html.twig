{% if activeOrg %}
  <div class="align-items-end">
    <div
        {{ stimulus_controller('modal-form', {formUrl: path('app_category_new', {'orgId': activeOrgId})}) }}
        data-action="hidden.bs.modal->modal-form#modalHidden"
    >
      <button class="btn btn-outline-danger btn-sm" data-action="modal-form#openModal">NEW CATEGORY</button>
      {{ include("shared/_modal.html.twig", {modalTitle: 'Create a new Category'}) }}
    </div>


    {% for cat in activeOrg.categories %}
      {% set activeClass = cat.id == activeCatId ? "active" : "" %}
      <div class="row mt-3">
        <div class="col">
          <a class="btn btn-outline-info me-2 {{ activeClass }}"
             href="{{ path('app_home', {'orgId': activeOrgId, 'catId': cat.id}) }}">
            <span>{{ cat.categoryName }}</span>
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
