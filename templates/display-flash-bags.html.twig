{% for message in app.flashes('success') %}
  <div class="alert alert-success alert-dismissible fade show rounded-0" role="alert">
    {{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{% endfor %}

